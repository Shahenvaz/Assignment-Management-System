doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Student Sign In
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
  // jQuery library
  script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
  // Popper JS
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  // Latest compiled JavaScript
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  style.
    #teacher-sign-in{
    display: flex;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    }
    .left img{
    height: 18rem;
    }
    .right{
    padding-top: 40px;
    }
    .buttons{
    padding:10px;
    }
    .warning{
    position: absolute;
    top: 15%;
    right: 0px;
    background-color: red;
    width: 300px;
    padding: 20px 20px;
    color:white;
    }

nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
  a.navbar-brand(href='/') Assignment Management System
  button.navbar-toggler(data-target='#my-nav' data-toggle='collapse' aria-controls='my-nav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #my-nav.collapse.navbar-collapse
    ul.navbar-nav.ml-auto
      li.nav-item
        a.nav-link(href='#')
          | About Us 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='#' tabindex='-1' aria-disabled='true') About Team

#teacher-sign-in
  .left
    img(src='images/login-page/teacher.jpg' alt='')
  .right
    h3(align='center') Student Login
    form.form(action='/slogin' method='post')
      .teacherName
        label(for='') Student Mail
        input.form-control(type='email' name='name')
      .password
        label(for='') Password
        input.form-control(type='password' name='password')
      .buttons(style='text-align:center;')
        button.btn.btn-dark(type='submit')
          i.fa.fa-sign-in
          |  Login


if(swarning==true)
    .warning mail or password is invalid