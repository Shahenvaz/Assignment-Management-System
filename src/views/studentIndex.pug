head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Assinment Page
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
  // jQuery library
  script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
  // Popper JS
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  // Latest compiled JavaScript
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  script(src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous')
body(style="background-color:lightgrey")
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href='/') Assignment Management System
  button.navbar-toggler(data-target='#my-nav' data-toggle='collapse' aria-controls='my-nav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #my-nav.collapse.navbar-collapse
    ul.navbar-nav.ml-auto
      li.nav-item.active
        a.nav-link="Welcome "+response[0].StudentId

      li.nav-item
        a.nav-link(href='#')
          | About Us 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='#' tabindex='-1' aria-disabled='true') About Team
      li.nav-item.active
        a.nav-link(href='/logout') Log out

if(response[1].assignments.length==0)
  div(class="jumbotron bg-primary mt-2 responsive")
    div(class="container text-light") No assignment yet

each key in response[1].assignments
  div(class="jumbotron bg-primary mt-2 responsive")
    div(class="container")
      h4(class="display-6 text-light") 
        i(class="fa fa-book") 
        span=key.tsubject
      div(class="text-light")
        div(class="ml-3 mt-3 mb-3")
          span Q.
          span(style="margin-left:5px")=key.assinment_question
        div(style="display:flex")
          .tname
            i(class="fas fa-chalkboard-teacher" style="margin-right:6px")  
            span= key.tname  
            
          .class(style="margin-left:100px")
            i(class="fas fa-user-graduate" style="margin-right:6px")  
            span= key.class
          .class(style="margin-left:100px")
            i(class="fa fa-calendar" style="margin-right:6px")
            span= key.submission_date
          .class(style="margin-left:100px")
            i(class="fa fa-info-circle" style="margin-right:6px")
            span= key.extraInfo